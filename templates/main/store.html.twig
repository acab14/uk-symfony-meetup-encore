{% extends 'base.html.twig' %}

{% block body %}
    <h1>The Store</h1>

    <div class="card" data-controller="store">
        <div class="card-header">
            Products
        </div>
        <div class="card-body">
            <div class="card-list" data-target="store.productList"></div>

            <hr>
            <button data-action="click->store#showProducts" class="btn btn-lg btn-primary">
                Baaa! <i class="fad fa-sheep"></i>
            </button>
        </div>
    </div>

    <ul>
        {% for comment in comments %}
            <li data-controller="comment">
                <span class="js-comment-text">{{ comment }}</span>

                <button class="js-btn-make-louder btn btn-sm btn-secondary">Louder</button>
            </li>
        {% endfor %}
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('store') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('store') }}
{% endblock %}
